<div class="row mt-4">
  <div class="col-md-6 offset-md-3 ">
    <div class="card">
      <div class="card-body">
        <h2>ドリンクカテゴリーの編集</h2>

          <%= form_with(model: @drink_category, url: admin_drink_category_path(@drink_category) ) do |f| %>
            <%= render "layouts/error_messages", model: f.object %>
            <div class="mb-4">
              <%= f.label :name, "カテゴリー名" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="mb-2">
              <%= f.submit "更新", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mt-4">
        <%= link_to "戻る", admin_root_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
