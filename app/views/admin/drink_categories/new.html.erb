<div class="row mt-4">
  <div class="col-md-6 offset-md-3 col-lg-4 offset-4">
    <div class="card">
      <div class="card-body">
        <h2>ドリンクカテゴリー</h2>
        
        <%= form_with(model: @drink_category, url: admin_drink_categories_path) do |f| %>
          <div class="mb-4">
            <%= f.label :name, "カテゴリー名" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="my-2">
            <%= f.submit "送信", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="mt-4">
      <%= link_to "戻る", admin_drink_categories_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>


