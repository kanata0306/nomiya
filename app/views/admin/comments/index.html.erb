<h1 class="mt-4 mb-3">コメント管理画面</h1>

<div>
  <%= form_with url: admin_comments_path, method: :get  do |f| %>
    <div class="row">
      <div class="col-sm-8 col-md-6 col-lg-4 mb-2">
        <div class="d-flex">
          <%= f.search_field :keyword, class: "form-control", placeholder: "キーワードで検索", value: params[:keyword] %>
          <%= f.submit "検索", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>コメントID</th>
      <th>コメント</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.comment_content %></td>
        <td><%= link_to "削除", admin_comment_path(comment), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4">
  <%= link_to "戻る", admin_root_path, class: "btn btn-secondary" %>
</div>

