<% @posts.each do |post| %>
  <div class="row">
    <div class="col-4">
      <% if post.store_image.attached? %>
        <%= image_tag post.store_image.variant(resize: '300x300') %>
      <% else %>
        <p>NO image</p>
      <% end %>
    </div>
    <div class="col-2">
      <p>営業時間：</p>
      <%= render 'companies/posts/business_hours', post: post %>
    </div>
  </div>

  <div>
    <p>ドリンク一覧：</p>
    <% drinks_by_category = post.drinks.group_by { |drink| drink.drink_category.name } %>
    <% drinks_by_category.each do |category, drinks| %>
      <h3><%= category %></h3>
      <ul>
        <% drinks.each do |drink| %>
          <li>
            <strong>ドリンク名：</strong> <%= drink.name %>,
            <strong>価格：</strong> <%= drink.price %>円
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= link_to '詳細を見る', companies_post_path(post) %>
<% end %>

