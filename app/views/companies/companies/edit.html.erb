<div class="row mt-4">
  <div class="col-md-6 offset-md-3 col-lg-4 offset-4">
    <div class="card">
      <div class="card-body">

        <h2>企業編集画面</h2>
        
        <%= form_with model: @company, url: companies_companies_path do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          
          <div class="mb-2">
            <%= f.label :企業名 %><br>
            <%= f.text_field :company_name, class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :代表者名 %><br>
            <%= f.text_field :representative_name, class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :代表者メール %><br>
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :電話番号 %><br>
            <%= f.text_field :phone_number, class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :住所 %><br>
            <%= f.text_field :address, class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :新しいパスワード %> <i>(変更しない場合は空白のままで結構です)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
          </div>
        
          <div class="mb-2">
            <%= f.label :パスワード確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        
          <div class="actions">
            <%= f.submit "Update", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
    <h3>アカウントを削除する</h3>
    <div> <%= button_to "アカウント削除", companies_companies_path, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
    <%= link_to "Back", :back %>
  </div>
</div>