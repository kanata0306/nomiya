<h2>企業アカウント登録</h2>

<%= form_with model: @company, url: company_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :企業名 %><br>
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
    <%= f.label :代表者名 %><br>
    <%= f.text_field :representative_name %>
  </div>

  <div class="field">
    <%= f.label :代表者メール %><br>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br>
    <%= f.text_field :address %>
  </div>


  <div class="field">
    <%= f.label :パスワード %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "企業アカウントを登録する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= link_to "一般ユーザとして登録する", new_user_registration_path %>
