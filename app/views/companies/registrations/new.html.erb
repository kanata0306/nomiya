<div class="row mt-4">
  <div class="col-md-6 offset-md-3 col-lg-4 offset-4">
    <div class="card">
      <div class="card-body">

        <h2>企業アカウント登録</h2>
        
        <%= form_with model: @company, url: company_registration_path do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        
          <div class="mb-2">
            <%= f.label :企業名 %><br>
            <%= f.text_field :company_name, class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :代表者名 %><br>
            <%= f.text_field :representative_name, class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :代表者メール %><br>
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :電話番号 %><br>
            <%= f.text_field :phone_number, class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :住所 %><br>
            <%= f.text_field :address, class: "form-control" %>
          </div>
        
        
          <div class="mb-2">
            <%= f.label :パスワード %><br>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :パスワード確認 %><br>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        
          <div class="actions">
            <%= f.submit "企業アカウントを登録する", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
      
    <%= render "devise/shared/links" %>
    <%= link_to "一般ユーザとして登録する", new_user_registration_path %>
  </div>
</div>
