<h2>企業ログイン</h2>

<%= form_with model: @company, url: company_session_path, method: :post do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br>
    <%= f.password_field :password, required: true, autocomplete: "current-password" %>
  </div>
  
  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= link_to "一般ユーザとしてログインする", new_user_session_path %>
