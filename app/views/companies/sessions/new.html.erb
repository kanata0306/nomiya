<div class="row mt-4">
  <div class="col-md-6 offset-md-3 col-lg-4 offset-4">
    <div class="card">
      <div class="card-body">

        <h2>企業ログイン</h2>
        
        <%= form_with model: @company, url: company_session_path, method: :post do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="mb-2">
            <%= f.label :email, "メールアドレス" %><br>
            <%= f.email_field :email, required: true, class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :password, "パスワード" %><br>
            <%= f.password_field :password, required: true, autocomplete: "current-password", class: "form-control" %>
          </div>
          
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
    <%= link_to "一般ユーザとしてログインする", new_user_session_path %>
  </div>
</div>
