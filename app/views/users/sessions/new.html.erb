<div class="row mt-4">
  <div class="col-md-6 offset-md-3 col-lg-4 offset-4">
    <div class="card">
      <div class="card-body">

        <h2>ログイン</h2>
        
        <%= form_with model: @user, url: user_session_path do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="mb-2">
            <%= f.label :メールアドレス %><br>
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :パスワード %><br>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-primary btn-blo" %>
          </div>
          
        <% end %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
    <%= link_to "企業としてログインする", new_company_session_path %> 
  </div>
</div>
