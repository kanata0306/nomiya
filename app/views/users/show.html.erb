<h1 class="mb-4">ユーザ詳細</h1>

<div class="row">
  <div class="col-sm-3">
    <h2>ユーザー情報</h2>
    <div class="card">
      <div class="card-body">
        <h3>ユーザーネーム</h3>
        <%= @user.name %>
        <h3>メールアドレス</h3>
        <%= @user.email %> <br >
        <%= link_to "編集", edit_user_registration_path, class: "btn btn-warning" %>
      </div>
    </div>

  </div>
  
  <div class="col-sm-9">
    <h2>ユーザーのお気に入りした店舗</h2>
    <%= render "companies/posts/posts", posts: @posts %>
  </div>
</div>




