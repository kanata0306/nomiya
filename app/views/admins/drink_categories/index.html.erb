<h2>ドリンクカテゴリー一覧</h2>

<table>
  <thead>
    <tr>
      <th>カテゴリー名</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @drink_categories.each do |drink_category| %>
      <tr>
        <td><%= drink_category.name %></td>
        <td><%= button_to "編集", edit_admins_drink_category_path(drink_category) %></td>
        <td><%= button_to "削除", admins_drink_category_path(drink_category), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新規作成", new_admins_drink_category_path %>
